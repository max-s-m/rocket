// Демонстрація всіх токенів, типів і операторів

// Глобальні оголошення змінних з усіма типами

int a = 0;
float pi = 3.14;
bool ok = true;
string name = "Rocket";

// Арифметика та логіка
a = 5 + 3*2 - 1;
pi = pi / 2.0 ^ 3;          // степінь через ^
ok = !false && true || false;

a += 10;
a -= 2;
a *= 2;
a /= 2;

// Тест ідентифікаторів з підкресленням
int my_var1 = 123;
float my_var2 = 0.5;

// Введення даних
print("Enter int:");
a = inputInt();
print("Enter float:");
pi = inputFloat();
print("Enter bool:");
ok = inputBool();
print("Enter string:");
name = inputString();

// Порівняння та тернарний оператор
bool gt = (a > 0);
bool ge = (a >= 0);
bool lt = (a < 0);
bool le = (a <= 0);
bool eq = (a == 0);
bool ne = (a != 0);
int sign = (a > 0) ? 1 : -1;

// Дужки й пунктуація
a = (a + 1);
pi = pi;
{ }                         // фігурні дужки як спецсимволи

// if / elif / else
if (a > 0) {
    print("Positive");
} elif (a == 0) {
    print("Zero");
} else {
    print("Negative");
}

// switch / case / default
switch a {
    case 1:
        print("One");
    case 2:
        print("Two");
    default:
        print("Other");
}

// while
while (a < 3) {
    print("While loop");
    a = a + 1;
}

// do ... while
do {
    print("Do-While loop");
    a = a - 1;
} while (a > 0);

// for
for (int i = 0; i < 3; i = i + 1) {
    print("For");
}

